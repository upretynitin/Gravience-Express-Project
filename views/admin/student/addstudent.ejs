<%- include('../layouts/header.ejs') %>
  <%- include('../layouts/sidebar.ejs') %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">


      <!-- Main content -->
      <div class="content">
        <br>
        <br>
        <!-- /.card -->
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Display Student</h3>
            <button type="button" class="btn btn-info" style="float: right;" data-toggle="modal"
              data-target="#addstudent">
              Add Student
            </button>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <% if(msg.length> 0){ %>
              <div class="alert alert-success">
                  <%= msg %>
              </div>
              <% } %>
              <% if(msg1.length> 0){ %>
                <div class="alert alert-danger">
                    <%= msg1 %>
                </div>
                <% } %>

            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Course</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>

                <% d.forEach((item)=>{ %>
                  <tr>
                    <td><%= item._id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.email %></td>
                    <td><%= item.course %></td>
                    <td>
                      <img src="<%= item.image.url %>" alt="" width="50" style="border-radius: 20px;">
                    </td>
                    <td>
                      <a href="/admin/studentview/<%= item._id %>" class="btn btn-info">View</a>
                      <a href="/admin/studentedit/<%= item._id %>" class="btn btn-success">Edit</a>
                      <a href="/admin/studentdelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                    </td>
                  </tr>
                <% }) %>
                
              </tbody>
              <tfoot>
                <tr>
                  <th>Id</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Course</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!-- Modal add student -->
        <div class="modal fade" id="addstudent">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Add Student</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form action="/studentinsert" method="post" enctype="multipart/form-data">
                  <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="email" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="">Course</label>
                    <select name="course" id="" class="form-control">
                      <option value="">Select Course</option>
                      <% c.forEach((item)=>{ %>
                        <option value="<%= item.cname %>"><%= item.cname %></option>
                    <% }) %>
                    
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Image</label>
                    <input type="file" name="image" class="form-control" required>
                  </div>
                  <button class="btn btn-success" type="submit">Submit</button>
                </form>
              </div>
            </div>
            <!-- /.modal-content -->
          </div>
          <!-- /.modal-dialog -->
        </div>
        <!-- modal add student end -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('../layouts/footer.ejs') %>